<UserControl x:Class="CircLab.LogicGate.Sept_Segments"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CircLab.LogicGate"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Height="179" Width="60" Background="White" x:Name="sevenSegmentsGrid">
        <Line ToolTip="A" x:Name="lA" X1="10" X2="50" Y1="15" Y2="15" StrokeThickness="5" Stroke="Gray"/>
        <Line ToolTip="F" x:Name="lF" X1="10" X2="10" Y1="15" Y2="80" StrokeThickness="5" Stroke="Gray" ></Line>
        <Line ToolTip="G" x:Name="lG" X1="10" X2="50" Y1="85" Y2="85" StrokeThickness="5" Stroke="Gray"/>
        <Line ToolTip="B" x:Name="lB" X1="50" X2="50" Y1="15" Y2="80" StrokeThickness="5" Stroke="Gray"/>
        <Line ToolTip="E" x:Name="lE" X1="10" X2="10" Y1="90" Y2="145" StrokeThickness="5" Stroke="Gray" Height="179" VerticalAlignment="Bottom" ></Line>
        <Line ToolTip="D" x:Name="lD" X1="10" X2="50" Y1="145" Y2="145" StrokeThickness="5" Stroke="Gray"/>
        <Line ToolTip="C" x:Name="lC" X1="50" X2="50" Y1="90" Y2="145" StrokeThickness="5" Stroke="Gray"/>

    </Grid>
</UserControl>
