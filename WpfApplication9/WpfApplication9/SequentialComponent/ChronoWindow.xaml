        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication9.SequentialComponent"
        mc:Ignorable="d"
        Title="Chronogramme Window" Height="400" Width="600">
    <ScrollViewer HorizontalScrollBarVisibility="Auto"  VerticalScrollBarVisibility="Auto" Margin="0,-28,0,28">
        <Grid>
            <Button x:Name="Pause" Margin="0,38.311,28.301,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="220.538" Content="Pause" Click="Pause_Continu"/>
            <StackPanel x:Name="chronogrammeStack"  />
            <Button x:Name="Reset" Margin="0,85.009,28.301,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="220.538" Content="Reset" Click="ResetChronogrammes"/>
        </Grid>

    </ScrollViewer>
</Window>
